<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/main_layout_landscape">

    <TextView
        android:id="@+id/head_text"
        style="@style/head_text_landscape"
        android:layout_marginTop="@dimen/half"
        android:text="@string/category_beatles" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_image"
            style="@style/category_image_landscape"
            android:layout_marginBottom="@dimen/standard"
            android:layout_marginEnd="@dimen/half"
            android:layout_marginStart="@dimen/standard"
            android:layout_marginTop="@dimen/half"
            android:layout_weight="1"
            android:contentDescription="@string/category_image"
            android:src="@drawable/beatles" />

        <LinearLayout
            style="@style/layout_description_landscape"
            android:layout_weight="1">

            <TextView
                android:id="@+id/category_description"
                style="@style/category_description_landscape"
                android:layout_marginEnd="@dimen/standard"
                android:layout_marginStart="@dimen/half"
                android:layout_marginTop="@dimen/half"
                android:text="" />

            <LinearLayout
                style="@style/layout_playlist_button">

                <TextView
                    android:id="@+id/category_enter"
                    style="@style/category_enter_text"
                    android:layout_marginBottom="@dimen/half"
                    android:text="@string/category_enter" />

                <ImageButton
                    android:id="@+id/playlist_button"
                    style="@style/category_playlist_button"
                    android:layout_marginBottom="@dimen/standard"
                    android:contentDescription="@string/playlist_button_desc"
                    android:src="@drawable/category_switch" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>